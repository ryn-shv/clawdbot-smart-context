{
  "name": "clawdbot-smart-context",
  "version": "2.1.1",
  "description": "Semantic context selection for Clawdbot - filters message history by relevance with hybrid memory (facts + summaries)",
  "keywords": [
    "clawdbot",
    "context",
    "semantic-search",
    "embeddings",
    "transformers",
    "ai-agent",
    "llm",
    "memory",
    "hybrid-memory",
    "rag",
    "vector-search"
  ],
  "main": "index.js",
  "type": "module",
  "bin": {
    "smart-context-health": "./scripts/health-check.sh",
    "smart-context-patches": "./scripts/apply-patches.sh"
  },
  "files": [
    "*.js",
    "!*.test.js",
    "!*.backup*",
    "hooks/",
    "tool-results/",
    "scripts/",
    "README.md",
    "CHANGELOG.md",
    "INSTALLATION.md",
    "LICENSE",
    "CONFIGURATION.md",
    "QUICKSTART.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryn-shv/clawdbot-smart-context.git"
  },
  "bugs": {
    "url": "https://github.com/ryn-shv/clawdbot-smart-context/issues"
  },
  "homepage": "https://github.com/ryn-shv/clawdbot-smart-context#readme",
  "clawdbot": {
    "id": "smart-context",
    "name": "Smart Context",
    "kind": "hook",
    "description": "Filters message history by semantic relevance with hybrid memory extraction",
    "version": "2.1.1",
    "configSchema": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable smart context filtering"
        },
        "topK": {
          "type": "integer",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "Number of most relevant messages to keep"
        },
        "recentN": {
          "type": "integer",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Always keep the last N messages for continuity"
        },
        "minScore": {
          "type": "number",
          "default": 0.65,
          "minimum": 0,
          "maximum": 1,
          "description": "Minimum similarity score to include a message"
        },
        "stripOldToolCalls": {
          "type": "boolean",
          "default": false,
          "description": "Remove old tool calls to avoid provider format issues"
        },
        "cachePath": {
          "type": "string",
          "description": "SQLite database path for embedding cache",
          "default": "~/.clawdbot/smart-context-cache.db"
        },
        "debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging"
        },
        "SC_STORAGE_MODE": {
          "type": "string",
          "enum": [
            "facts",
            "semantic",
            "hybrid"
          ],
          "default": "hybrid",
          "description": "Memory storage mode: facts only, summaries only, or both"
        },
        "SC_SUMMARY_DEDUP_THRESHOLD": {
          "type": "number",
          "default": 0.85,
          "minimum": 0.5,
          "maximum": 1.0,
          "description": "Cosine similarity threshold for summary deduplication"
        },
        "SC_SUMMARY_MAX_LENGTH": {
          "type": "integer",
          "default": 500,
          "minimum": 100,
          "maximum": 2000,
          "description": "Maximum character length for summary content"
        },
        "SC_SUMMARY_LIMIT": {
          "type": "integer",
          "default": 500,
          "minimum": 50,
          "maximum": 5000,
          "description": "Maximum summaries per user before LRU eviction"
        },
        "SC_MEMORY": {
          "type": "boolean",
          "default": false,
          "description": "Enable memory system (fact and summary storage)"
        },
        "SC_MEMORY_EXTRACT": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic memory extraction from conversations"
        }
      },
      "additionalProperties": true
    }
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^11.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "author": {
    "name": "rynshv",
    "url": "https://github.com/ryn-shv"
  },
  "license": "MIT",
  "scripts": {
    "test": "node test-memory.js",
    "test:memory": "node test-memory.js",
    "postinstall": "node scripts/postinstall.cjs || true",
    "apply-patches": "bash scripts/apply-patches.sh",
    "check-patches": "bash scripts/check-patches.sh",
    "revert-patches": "bash scripts/revert-patches.sh",
    "health-check": "bash scripts/health-check.sh"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/ryn-shv"
  }
}
